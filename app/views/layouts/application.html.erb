<!DOCTYPE html>
<html>
<head>
  <title>Beerhunter</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="bubbles"></div>
<%= yield %>
<script>

    //Many thanks to http://codepen.io/simsketch/pen/pJbYKx <3
    (function(){

        var c = document.getElementById('bubbles'),
                randomN = function(start, end){
                    return Math.random()*end+start;
                },
                i = 0,
                generateBubble = function(){
                    if(i < 30){
                        var el = document.createElement('div'),
                                size = randomN(5, 20);
                        el.setAttribute('style','width: '+size+'px; height: '+size+'px; left:'+randomN(1, c.offsetWidth-(size+4) )+'px;');
                        c.appendChild(el);
                        i++;
                    } else {
                        clearInterval(inter);
                    }
                };

        generateBubble();

        var inter = setInterval(generateBubble, 500);

    })();

</script>
</body>
</html>
